{% extends '@basic/base.html.twig' %}

{% block title %}
    <title>Change password-Online Shop</title>
{% endblock %}

{% block body %}
    <div class="span9">
        <h2>Change password</h2>

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        <div class="well">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}