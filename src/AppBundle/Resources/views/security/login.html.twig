{% extends '@basic/base.html.twig' %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" name="form_login">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" /><br/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" /><br/>

        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">Remember me !</label><br/>


        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button type="submit">Login !</button>
    </form>

    <p><a href="{{ path('forgot_password') }}">Forgot your password !</a></p>
{% endblock %}