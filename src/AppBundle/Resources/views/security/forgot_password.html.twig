{% extends '@basic/base.html.twig' %}

{% block title %}
    <title>Forgot password-Online Shop</title>
{% endblock %}

{% block body %}
    <div class="span9">
        <h2>Forgot password</h2>

        {% for message in app.flashes('error') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}

        <div class="well">
            <p>Please insert your email !</p>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <a class="btn btn-large btn-default" href="{{ path('login') }}">Cancel</a>
                <input class="btn btn-large btn-success" type="submit" value="Submit !">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}